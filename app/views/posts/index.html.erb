<div class="index_post">
  <% @posts.each do |post| %>
      <div>
        <h1 id="<%= post.post_name %>"><%= link_to post.post_title, post %></h1>
        <small class="index_post_data"><%= post.post_date.to_date %></small>
        <div class="index_post_body"><%= raw cut_head(post) %></div>
        <div class="index_post_tags"><%= raw post.tag_list.map { |t| link_to t, tag_path(t), class: "" }.join(" ") %></div>
      </div>
      <% if current_user %>
          <div data-no-turbolink>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'} %>
            <%= link_to 'New Post', new_post_path %>
          </div>
      <% end %>
  <% end %>
</div>
<br>

<% content_for(:title, "Свежие посты") %>

<% content_for :sidebar do %>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Сейчас на странице</h3>
      </div>
      <div class="panel-body">
        <p><%= page_entries_info @posts %></p>
        <% @posts.each do |post| %>
            <a class="" href="#<%= post.post_name %>"><%= post.post_title %></a><br/>
        <% end %>
      </div>
    </div>

    <div class="btn-group btn-group-justified page_nav">

      <div class="btn-group prev">
        <%= link_to_previous_page @posts, 'Назад', class: "btn btn-prev" do %>
            <span></span>
        <% end %>
      </div>
      <div class="btn-group next">
        <%= link_to_next_page @posts, 'Далее', class: "btn btn-next" do %>
            <span></span>
        <% end %>
      </div>
    </div>

<% end %>