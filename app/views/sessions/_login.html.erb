<%= form_tag(controller: "sessions", action: "create", method: "post") do %>
    <fieldset>
      <legend>Войдите:</legend>
      <div class="form-group">
        <%= label_tag :name, 'Логин:' %>
        <%= text_field_tag :name, params[:name], class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password, 'Пароль:' %>
        <%= password_field_tag :password, params[:password], class: "form-control" %>
      </div>
      <%= submit_tag "Войти!", class: "btn btn-default" %>
    </fieldset>
<% end %>

