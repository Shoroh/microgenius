<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :post_date %><br>
    <%= f.datetime_select :post_date %>
  </div>
  <div class="field">
    <%= f.label :post_title %><br>
    <%= f.text_field :post_title, size: 128 %>
  </div>
  <div class="field">
    <%= f.label :post_content %><br>
    <%= f.text_area :post_content, rows: 25, cols: 128  %>
  </div>
  <div class="field">
    <%= f.label :post_status %><br>
    <%= f.select :post_status, options_for_select(["draft", "publish", "pending"], @post.post_status ) %>
  </div>
  <div class="field">
    <%= f.label :comment_status %><br>
    <%= f.label :comment_status, "open", :value => "open"  %>
    <%= f.radio_button :comment_status, 'open', checked: @post.comment_status == "open" %>
    <%= f.label :comment_status, "closed", :value => "closed" %>
    <%= f.radio_button :comment_status, 'closed', checked: @post.comment_status == "closed" %>
  </div>
  <div class="field">
    <%= f.label :post_name %><br>
    <%= f.text_field :post_name %>
  </div>
  <div class="field">
    <%= f.label :post_type %><br>
    <%= f.text_field :post_type %>
  </div>
  <div class="actions">
    <%= f.submit 'Апдейт' %>
  </div>
<% end %>
